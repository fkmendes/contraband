<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beast namespace="beast.core:beast.evolution.alignment:beast.evolution.tree.coalescent:beast.core.util:beast.evolution.nuc:beast.evolution.operators:beast.evolution.sitemodel:beast.evolution.substitutionmodel:beast.evolution.likelihood" required="BEAST v2.5.0" version="2.5">

  <run id="mcmc" spec="MCMC" chainLength="5000000">
    <state id="state" storeEvery="5000">
      <stateNode idref="BMSigmaSq"/>
      <stateNode idref="BMMean"/>
    </state>

    <distribution id="posterior" spec="util.CompoundDistribution">

      <!-- START prior -->
      <distribution id="prior" spec="util.CompoundDistribution">
                
        <distribution id="BMSigmaSqPrior" spec="beast.math.distributions.Prior" x="@BMSigmaSq">
	  <!-- <distr id="LogNormal.BMSigmaSq" spec="beast.math.distributions.LogNormalDistributionModel" offset="0.0" M="[BMSigmaSqPriorMeanHere]" S="[BMSigmaSqPriorStdDevHere]"/> -->
	  <distr id="Exp.BMSigmaSq" spec="beast.math.distributions.Exponential" offset="0.0" mean="[BMSigmaSqPriorMeanHere]"/>
        </distribution>

        <distribution id="BMMeanPrior" spec="beast.math.distributions.Prior" x="@BMMean">
	      <distr id="Normal.BMMean" spec="beast.math.distributions.Normal" offset="0.0" mean="[BMMeanPriorMeanHere]" sigma="[BMMeanPriorStdDevHere]"/>
        </distribution>
      </distribution>
      <!-- END prior -->

      <distribution id="likelihood" spec="util.CompoundDistribution" useThreads="false">
	    <distribution id="BMMVN" spec="contraband.BMMVNLikelihoodOneTrait">
	    
	      <tree id="FixedTree" spec="beast.util.TreeParser" IsLabelledNewick="true" adjustTipHeights="false" newick="[TreeHere]" offset="0" singlechild="false">

	        <taxonset id="TaxonSet" spec="TaxonSet">
		  [TaxonSetHere]
	        </taxonset>
	      </tree>

	      <oneTraitData id="oneTraitData" spec="contraband.OneValueContTraits" traitValues="[TraitValuesHere]" nTraits="1"/>

	      <sigmasq id="BMSigmaSq" dimension="1" spec="parameter.RealParameter">1.743801</sigmasq>
	    
	      <mean id="BMMean" dimension="1" spec="parameter.RealParameter">0.1075313</mean>
	    </distribution> <!-- END BMVN -->
	    
      </distribution> <!-- END Likelihood -->
    </distribution> <!-- END Posterior -->

    <operator id="BMSigmaSqScaler" spec="ScaleOperator" parameter="@BMSigmaSq" scaleFactor="0.75" weight="3.0"/>
    <operator id="BMMeanScaler" spec="RealRandomWalkOperator" parameter="@BMMean" windowSize="10.0" weight="3.0"/>

    <logger id="tracelog" fileName="[FileNameHere].log" logEvery="5000" model="@posterior" sanitiseHeaders="true" sort="smart">
      <log idref="posterior"/>
      <log idref="likelihood"/>
      <log idref="prior"/>
      <log idref="BMSigmaSq"/>
      <log idref="BMMean"/>
    </logger>

    <logger id="screenlog" logEvery="20000">
        <log idref="posterior"/>
        <log id="ESS.0" spec="util.ESS" arg="@posterior"/>
        <log idref="likelihood"/>
        <log idref="prior"/>
    </logger>

    <logger id="treelog.t:firsthalf" fileName="[FileNameHere].trees" logEvery="5000000" mode="tree">
        <log id="TreeWithMetaDataLogger" spec="beast.evolution.tree.TreeWithMetaDataLogger" tree="@FixedTree"/>
    </logger>
  </run>
</beast>
