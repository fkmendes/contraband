<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beast namespace="beast.core:beast.evolution.alignment:beast.evolution.tree.coalescent:beast.core.util:beast.evolution.nuc:beast.evolution.operators:beast.evolution.sitemodel:beast.evolution.substitutionmodel:beast.evolution.likelihood" required="BEAST v2.5.0" version="2.5">

  <run id="mcmc" spec="MCMC" chainLength="5000000">
    <state id="state" storeEvery="5000">
      <tree idref="TheTree" name="stateNode"/>
      <parameter id="birthRate" name="stateNode">1.0</parameter>
      <stateNode idref="rateValues"/>
      <stateNode idref="rateAssignments"/>
      <stateNode idref="BMMean"/>
    </state>

    <distribution id="posterior" spec="util.CompoundDistribution">

      <!-- START prior -->
      <distribution id="prior" spec="util.CompoundDistribution">   
      	<prior id="YuleBirthRatePrior" spec="beast.math.distributions.Prior" name="distribution" x="@birthRate">
          <Uniform id="UniformBirth" spec="beast.math.distributions.Uniform" name="distr" upper="Infinity"/>
        </prior>
                    
	<distribution id="rateValuesPrior" spec="beast.math.distributions.Prior" x="@rateValues">
	  <distr id="Exp.rateValues" spec="beast.math.distributions.Exponential" offset="0.0" mean="0.2"/>
	</distribution>
		
	<distribution id="rateAssignmentsPrior" spec="beast.math.distributions.Prior" x="@rateAssignments">
	  <distr id="Exp.rateAssignments" spec="beast.math.distributions.Uniform" offset="0.0" lower="0.0" upper="1.0"/>
	</distribution>

        <distribution id="MeanPrior" spec="beast.math.distributions.Prior" x="@BMMean">
	      <distr id="Normal.Mean" spec="beast.math.distributions.Normal" mean="0.0" sigma="2.0"/>
        </distribution>
      </distribution>
      <!-- END prior -->

      <distribution id="likelihood" spec="util.CompoundDistribution" useThreads="false">
	    <distribution id="BMMVNShift" spec="contraband.BMMVNShiftLikelihoodOneTrait">
	    
	      <tree id="TheTree" spec="beast.util.TreeParser" IsLabelledNewick="true" adjustTipHeights="false" newick="((sp1:1.0,sp2:1.0):1.0,sp3:1.0):0.0;" offset="0" singlechild="false"/>
<!-- 	        <taxonset id="TaxonSet" spec="TaxonSet"> -->
<!-- 	          <taxon id="sp1" spec="Taxon"/> -->
<!-- 	          <taxon id="sp2" spec="Taxon"/> -->
<!-- 	          <taxon id="sp3" spec="Taxon"/> -->
<!-- 	        </taxonset> -->
<!-- 	      </tree> -->

	      <oneTraitData id="oneTraitData" spec="contraband.OneValueContTraits" nTraits="1" spNames="sp1,sp2,sp3">
	      	<traitValues id="fixedTraitValues" spec="parameter.RealParameter">4.1 4.5 5.2</traitValues>
	      </oneTraitData>

		  <rateManager id="rateManager" spec="contraband.ColorManager" nTraits="1" nColors="2" coalCorrection="false">
		    <tree idref="TheTree"/>
		    <colorValues id="rateValues" spec="parameter.RealParameter">0.1 0.1</colorValues>
		    <colorAssignments id="rateAssignments" spec="parameter.IntegerParameter" lower="0" upper="1">0 0 0 0 0</colorAssignments>
		  </rateManager>
	    
	      <mean id="BMMean" dimension="1" spec="parameter.RealParameter">0.0</mean>
	    </distribution> <!-- END BMVN -->
	    
      </distribution> <!-- END Likelihood -->
    </distribution> <!-- END Posterior -->

    <operator id="YuleBirthRateScaler" spec="ScaleOperator" parameter="@birthRate" scaleFactor="0.75" weight="3.0"/>
    <operator id="YuleModelTreeScaler" spec="ScaleOperator" scaleFactor="0.5" tree="@TheTree" weight="3.0"/>
    <operator id="YuleModelTreeRootScaler" spec="ScaleOperator" rootOnly="true" scaleFactor="0.5" tree="@TheTree" weight="3.0"/>
    <operator id="YuleModelUniformOperator" spec="Uniform" tree="@TheTree" weight="30.0"/>
    <operator id="YuleModelSubtreeSlide" spec="SubtreeSlide" tree="@TheTree" weight="15.0"/>
    <operator id="YuleModelNarrow" spec="Exchange" tree="@TheTree" weight="15.0"/>            
    <operator id="YuleModelWide" spec="Exchange" isNarrow="false" tree="@TheTree" weight="3.0"/>
    <operator id="YuleModelWilsonBalding" spec="WilsonBalding" tree="@TheTree" weight="3.0"/>
    <operator id="RateAssignmentWalker" spec="IntRandomWalkOperator" parameter="@rateAssignments" windowSize="1" weight="10.0"/>
    <operator id="RateValueScaler" spec="ScaleOperator" parameter="@rateValues" scaleFactor="0.75" weight="3.0"/>
    <operator id="MeanScaler" spec="RealRandomWalkOperator" parameter="@BMMean" windowSize="10.0" weight="3.0"/>
	
    <logger id="tracelog" fileName="BMMVNShift_samplingtree.log" logEvery="5000" model="@posterior" sanitiseHeaders="true" sort="smart">
      <log idref="posterior"/>
      <log idref="likelihood"/>
      <log idref="prior"/>
      <log idref="rateValues"/>
      <log idref="rateAssignments"/>
      <log idref="BMMean"/>
    </logger>

    <logger id="screenlog" logEvery="1">
        <log idref="posterior"/>
        <log id="ESS.0" spec="util.ESS" arg="@posterior"/>
        <log idref="likelihood"/>
        <log idref="prior"/>
    </logger>

    <logger id="treelog.t:firsthalf" fileName="BMMVNShift_samplingtree.trees" logEvery="5000" mode="tree">
        <log id="TreeWithMetaDataLogger" spec="beast.evolution.tree.TreeWithMetaDataLogger" tree="@TheTree"/>
    </logger>
  </run>
</beast>
